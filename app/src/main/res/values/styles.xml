<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InComingMessage" parent="Message">
        <item name="android:background">@drawable/bubble_incoming</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="OutGoingMessage" parent="Message">
        <item name="android:background">@drawable/bubble_outgoing</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Message" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/padding_eight</item>
    </style>

    <style name="BubblePadding">
        <item name="android:padding">@dimen/padding_eight</item>
    </style>

    <style name="SendButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:text">@string/send</item>
        <item name="android:src">@drawable/ic_baseline_send_24</item>
    </style>

    <style name="MessageEditText" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/write_your_message_here</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/zero</item>
    </style>
</resources>