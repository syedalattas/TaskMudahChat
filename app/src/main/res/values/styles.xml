<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InComingMessage" parent="Message">
        <item name="android:background">@drawable/bubble_incoming</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="OutGoingMessage" parent="Message">
        <item name="android:background">@drawable/bubble_outgoing</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Message" parent="Widget.MaterialComponents.TextView">
        <item name="android:padding">@dimen/bubble_padding</item>
    </style>

    <style name="BubblePadding">
        <item name="android:padding">@dimen/bubble_padding</item>
    </style>

</resources>